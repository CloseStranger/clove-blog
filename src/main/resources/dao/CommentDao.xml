<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clovestranger.clove_blog.dao.CommentMapper">
    <insert id="addComment" parameterType="Map">
        insert into comments (parentId, commentId, commentContent, commentUserName)
        values (#{parentId}, #{commentId}, #{commentContent}, #{commentUserName})
    </insert>
    <delete id="delComment" parameterType="String">
        delete
        from comments
        where commentId = #{commentId}
    </delete>
    <update id="updateComment" parameterType="com.clovestranger.clove_blog.model.Comment">
        update comments
        set commentContent = #{commentContent}
        where commentId = #{commentId}
    </update>
    <select id="getComment" resultType="com.clovestranger.clove_blog.model.Comment" parameterType="String">
        select *
        from comments
        where parentId = #{resourceId}
    </select>
</mapper>