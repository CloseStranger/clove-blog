<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clovestranger.clove_blog.dao.ArticleMapper">
    <resultMap id="articleListsMap" type="com.clovestranger.clove_blog.model.Article" autoMapping="true">
        <id property="articleResId" column="articleResId"/>
        <collection property="tags" ofType="com.clovestranger.clove_blog.model.Tag">
            <id property="id" column="tId"/>
            <result property="tagLabel" column="tagLabel"/>
        </collection>
    </resultMap>
    <insert id="addArticle" parameterType="com.clovestranger.clove_blog.model.Article">
        insert into articles (articleResId, content, hotContent, vipContent,
        visible, coverImg, contentSummary,
        createTime, updateTime)
        values (#{articleResId}, #{content}, #{hotContent},#{vipContent}, #{visible}, #{coverImg},
        #{contentSummary},#{createTime}, #{updateTime});
        insert into tagarticlemiddleware (articleResId, tagResId) values
        <foreach collection="tags" item="item" separator=",">
            (#{articleResId},#{item})
        </foreach>
    </insert>
    <delete id="delArticle" parameterType="String">
        delete
        from articles
        where articleResId = #{articleResId}
    </delete>
    <update id="updateArticle" parameterType="com.clovestranger.clove_blog.model.Article">
        update articles
        set content    = #{content},
            updateTime = #{updateTime}
        where resourceId = #{resourceId}
    </update>
    <select id="articleLists" parameterType="com.clovestranger.clove_blog.model.Article" resultMap="articleListsMap">
        select * from articles as a
        <!-- c.tagLabel,
        c.id as tId
        from articles a
        left join tagarticlemiddleware b
        on a.articleResId = b.articleResId
        left join tags c
        on b.tagResId = c.tagResId
        <where>
            <if test="articleResId != null and articleResId != ''">
                and a.articleResId like concat('%',#{articleResId},'%')
            </if>
            <if test="hotContent != null">
                and a.hotContent = #{hotContent}
            </if>
            <if test="vipContent != null">
                and a.vipContent = #{vipContent}
            </if>
            <if test="visible != null">
                and a.visible = #{visible}
            </if>
            <if test="contentSummary != null and contentSummary != ''">
                and a.contentSummary like concat('%',#{contentSummary},'%')
            </if>
            <if test="title != null and title != ''">
                and a.title like concat('%',#{title},'%')
            </if>
        </where> -->
        order by a.createTime desc;
    </select>
</mapper>